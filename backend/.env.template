# ====================
# ✅ Spring Boot App
# ====================
SPRING_PROFILES_ACTIVE=default
SPRING_APPLICATION_NAME=hospital-booking-system

# ====================
# ✅ PostgreSQL Database
# ====================
POSTGRES_DB=hospital
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password

# JDBC URL format used in application.properties
SPRING_DATABASE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${POSTGRES_DB}
SPRING_DATABASE_USERNAME=${POSTGRES_USER}
SPRING_DATABASE_PASSWORD=${POSTGRES_PASSWORD}

# ====================
# ✅ Flyway (optional, only if using)
# ====================
FLYWAY_BASELINE_ON_MIGRATE=true


# SMTP options
MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true

# ====================
# ✅ Allowed Origins (add other origins after adding ',')
# ====================
APP_CORS_ALLOWED_ORIGINS=http://localhost:5173


# ====================
# ✅ Server Port (Optional)
# ====================
SERVER_PORT=8080
